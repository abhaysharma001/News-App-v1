<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.superior.labs.hindbhashi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.superior.labs.hindbhashi.ViewCatActivity"
            android:parentActivityName="com.superior.labs.hindbhashi.MainActivity" />
        <activity android:name="com.superior.labs.hindbhashi.ViewPostActivity" />
        <activity android:name="com.superior.labs.hindbhashi.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.superior.labs.hindbhashi.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>