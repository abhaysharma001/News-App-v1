<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewsFragment">



    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_height="match_parent"
        android:weightSum="10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5">

        <com.tuyenmonkey.mkloader.MKLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mk_color="@color/colorRedN"
            android:id="@+id/loadingNewsFrag"
            android:layout_gravity="center"
            app:mk_type="Whirlpool" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/newsHomeImage" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_weight="6">


            <TextView
                android:id="@+id/HeadingHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:fontFamily="sans-serif-condensed-medium" />


            <TextView
                android:id="@+id/contentHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="Posted On : 15 June 2020"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20dp"
                app:fontFamily="sans-serif-condensed-light" />


            <TextView
                android:id="@+id/authorHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="Posted by admin at 10:00 am"
                android:textSize="18dp"
                android:textColor="@color/colorGrey"
                app:fontFamily="sans-serif-condensed-light" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>